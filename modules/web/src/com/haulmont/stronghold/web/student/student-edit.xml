<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.stronghold.web.student.StudentEdit"
        datasource="studentDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.stronghold.web.student">
    <dsContext>
        <datasource id="studentDs"
                    class="com.haulmont.stronghold.entity.Student"
                    view="student-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="studentDs">
            <column width="250px">
                <field property="name"/>
                <field property="surname"/>
                <field property="patronymic"/>
                <field property="email"/>
                <field property="skype"/>
                <field property="position"/>
                <field property="project"/>
                <field property="organization"/>
                <field property="user"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
