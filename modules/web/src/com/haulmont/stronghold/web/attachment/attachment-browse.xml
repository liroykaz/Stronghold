<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.stronghold.web.attachment.AttachmentBrowse"
        focusComponent="attachmentsTable"
        lookupComponent="attachmentsTable"
        messagesPack="com.haulmont.stronghold.web.attachment">
    <dsContext>
        <groupDatasource id="attachmentsDs"
                         class="com.haulmont.stronghold.entity.Attachment"
                         view="attachment-view">
            <query>
                <![CDATA[select e from stronghold$Attachment e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="attachmentsTable"
            spacing="true">
        <filter id="filter"
                applyTo="attachmentsTable"
                datasource="attachmentsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="attachmentsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="attachment"
                        caption="msg://Attachment"/>
            </columns>
            <rows datasource="attachmentsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="attachmentsTable.create"
                        caption="msg://Create"/>
                <button id="editBtn"
                        action="attachmentsTable.edit"
                        caption="msg://Edit"/>
                <button id="removeBtn"
                        action="attachmentsTable.remove"
                        caption="msg://Remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
